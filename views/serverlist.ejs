<div class="flex">
  <div>
    <a href="/">
      <h1><i class="bi bi-list-task"></i>CS2D Server List</h1>
      <div><i class="bi bi-arrow-clockwise"></i>Refresh</div>
    </a>
  </div>
  <div>
    <div><%= serversNum %> <i class="bi bi-hdd"></i></div>
    <div><%= playersNum %> <i class="bi bi-person"></i></div>
  </div>
</div>

<p>Explore all the servers in CS2D that are currently online.</p>

<div class="table-responsive">
  <table class="sortable asc serverlist">
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th>&nbsp;</th>
        <th>Name</th>
        <th>Map</th>
        <th>Players</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody class="serverlist">
      <% servers.forEach(function(s) { %>
      <tr onclick="window.location.href='/details/<%= s.ip %>:<%= s.port %>'" <% if ((s.players - s.bots) > 0) { %> class="e" <% } %>>
        <td><%= s.geoip.flag %></td>
        <td><span class="<%= ['s', 'd', 't', 'c', 'z'][s.gamemode] || '' %>"><%= ['S', 'D', 'T', 'C', 'Z'][s.gamemode] || '' %></span></td>
        <td><%= s.name %></td>
        <td><%= s.map %></td>
        <td data-sort="<%= ((s.players-s.bots)*100) + s.bots %>"><%= s.players %>/<%= s.maxplayers %><% if (s.bots > 0) { %> <span class="bots"><%= s.bots %></span><% } %></td>
        <td><%= s.ip %>:<%= s.port %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>