<div class="flex">
  <div>
    <h1><%= title %></h1>
  </div>
</div>

<div class="stats">
  <div class="stats-container">
    <h2><i class="bi bi-controller mr-2"></i>Popular Game Modes</h2>
    <% stats.gamemodes.forEach(gm => { %>
      <div class="stat-item">
        <span><%= ['Standard', 'Deathmatch', 'Team Deathmatch', 'Construction', 'Zombies!'][gm.gm] || '' %></span>
        <span><%= gm.count %></span>
      </div>
    <% }) %>
  </div>
  <div class="stats-container">
    <h2><i class="bi bi-globe-europe-africa mr-2"></i>Popular Maps</h2>
    <% stats.maps.forEach(map => { %>
      <div class="stat-item">
        <span><%= map.map %></span>
        <span><%= map.count %></span>
      </div>
    <% }) %>
  </div>
  <div class="stats-container">
    <h2><i class="bi bi-geo-alt-fill mr-2"></i>Popular Locations</h2>
    <% stats.locations.forEach(country => { %>
      <div class="stat-item">
        <span><%= country.country %></span>
        <span><%= country.count %></span>
      </div>
    <% }) %>
  </div>
</div>

<div class="stats">
  <div class="stats-container">
    <h2><i class="bi bi-server mr-2"></i>Process and Network</h2>
    <div class="stat-item">
      <span>Uptime</span>
      <span><%= stats.uptime %></span>
    </div>
    <div class="stat-item">
      <span>Bytes Sent</span>
      <span><%= stats.sentBytes %></span>
    </div>
    <div class="stat-item">
      <span>Bytes Received</span>
      <span><%= stats.recvBytes %></span>
    </div>
    <div class="stat-item">
      <span>Packets Sent</span>
      <span><%= stats.sentPackets %></span>
    </div>
    <div class="stat-item">
      <span>Packets Received</span>
      <span><%= stats.recvPackets %></span>
    </div>
  </div>
  <div class="stats-container">
    <h2><i class="bi bi-arrow-left-right mr-2"></i>Highest Response Ratio</h2>
    <% stats.responses.forEach(rr => { %>
      <div class="stat-item">
        <span><%= rr.name %></span>
        <span><%= rr.ratio %></span>
      </div>
    <% }) %>
  </div>
</div>
