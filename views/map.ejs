<div class="flex">
  <div>
    <h1 id="name"><%= title %></h1>
  </div>
  <a class="copyBtn" href="#">
    <code id="hash" class="copyContent" data-tippy-content="SHA-256 hash of the map file" data-tocopy="<%= v.mapHash %>"><%= v.mapHash.slice(0, 8) %>...</code>
  </a>
</div>

<div id="maps-dev">
  <p>🚧🛠️ Work in Progress: Some features are not ready yet. ⏳💡</p>
</div>

<div class="map-container">
  <a href="/maps/<%= prevMap %>" class="arrow arrow-left">&#8592;</a>
  <canvas id="map-preview" data-canvas='<%= JSON.stringify(v) %>'></canvas>
  <a href="/maps/<%= nextMap %>" class="arrow arrow-right">&#8594;</a>
</div>

<div class="stats map-info">
  <div class="stats-container">
    <label>Map Metadata</label>
    <div class="stat-item">
      <span>Map <%= title %>.map</span>
      <span><%= bytesToSize(v.mapSize) %></span>
    </div>
    <div class="stat-item">
      <span>Map size in tiles</span>
      <span><%= v.mapWidth %>×<%= v.mapHeight %></span>
    </div>
    <div class="stat-item">
      <span data-href="/cs2d/gfx/tiles/<%= v.tileImg %>" class="cs2d">Tileset <%= v.tileImg %></span>
      <span><%= bytesToSize(v.tileFileSize) %></span>
    </div>
    <div class="stat-item">
      <span>Tileset tile count</span>
      <span><%= v.tileCount %></span>
    </div>
    <div class="stat-item<% if (v.bgImg && v.bgSize == 0) { %> err<% } %>">
      <% const isImage = /\.(png|bmp|jpe?g)$/i.test(v.bgImg) %>
      <span
        <% if (isImage && v.bgSize > 0) { %>
          class="cs2d"
          data-href="/cs2d/gfx/backgrounds/<%= v.bgImg %>"
        <% } else if (isImage) { %>
          class="cs2d"
        <% } %>
      >
        Background<%= v.bgImg ? ' ' + v.bgImg : '' %>
      </span>
      <span>
      <% if (v.bgImg) { %>
        <% if (v.bgSize > 0) { %>
          <%= bytesToSize(v.bgSize) %>
        <% } else { %>
          Not Found
        <% } %>
      <% } else { %>
        none
      <% } %>
      </span>
    </div>
    <div class="stat-item">
      <span>Background color</span>
      <span><%= v.bgColor %></span>
    </div>
    <div class="stat-item">
      <span>Program used to save</span>
      <span><%= v.programUsed ? v.programUsed : 'N/A' %></span>
    </div>
    <div class="stat-item">
      <span>Created/Last updated by</span>
      <% if (v.authorUSGN > 0) { %>
      <a href="https://unrealsoftware.de/profile.php?userid=<%= v.authorUSGN %>" target="_blank"><%= v.authorName || 'N/A' %></a>
      <% } else { %>
      <span><%= v.authorName || 'N/A' %></span>
      <% } %>
    </div>
  </div>
  <div class="stats-container">
    <label>External Resources</label>
    <% v.resources.forEach((item, index) => { %>
    <div class="stat-item<% if (item.size == 0) { %> err<% } %>">
      <% if (item.size > 0) { %>
      <% const isImage = /\.(png|bmp|jpe?g)$/i.test(item.path) %>
      <span data-href="/cs2d/<%= item.path %>"<% if (isImage) { %> class="cs2d"<% } %>><%= item.path %></span>
      <% } else { %>
      <span><%= item.path %></span>
      <% } %>
      <span><%= item.size > 0 ? bytesToSize(item.size) : 'Not Found' %></span>
    </div>
    <% }) %>
    <% if (v.resources.length === 0) {%>
    <span class="stat-item no-external">No external resources needed.</span>
    <% } %>
  </div>
</div>
