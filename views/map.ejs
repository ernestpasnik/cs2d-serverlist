<div class="flex">
  <div>
    <h1><%= title %></h1>
  </div>
  <a class="copyBtn" href="#">
    <code id="hash" class="copyContent" data-tippy-content="SHA-256 hash of the map file" data-tocopy="<%= v.file.hash %>"><%= v.file.hash.slice(0, 8) %>...</code>
  </a>
</div>

<div class="map-container">
  <a href="/maps/<%= prevMap %>" class="arrow arrow-left">&#8592;</a>
  <% if (v.header.backgroundImage && v.backgroundSize.bytes > 0) { %>
  <div style="background: url('/cs2d/gfx/backgrounds/<%= v.header.backgroundImage %>')" id="map" data-mapData='<%= JSON.stringify(v) %>'></div>
  <% } else { %>
  <div id="phaser" data-mapdata='<%= JSON.stringify(v) %>'></div>
  <% } %>
  <a href="/maps/<%= nextMap %>" class="arrow arrow-right">&#8594;</a>
</div>

<div class="stats map-info">
  <%- include('map_info') %>
</div>